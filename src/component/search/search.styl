#search
    top 20px
    position sticky
    z-index 2
    display flex
    flex-direction row
    align-items center
    width 440px
    height 65px
    margin 60px auto 20px auto
    padding 0 0 0 12px
    background-color var(--root)
    border-radius 6px
    box-shadow 0 4px 16px rgba(0,0,0,.1)

    & > .icon
        margin 12px

    & > .search
        display flex
        flex 1
        width 100%
        font-size 28px
        color var(--title)
        background-color transparent
        padding 16px 4px
        border 0
        outline none

        &:placeholder
            color var(--detail)

    & > .order-list
        appearance none
        -webkit-appearance none
        display flex
        justify-content center
        align-items center
        width 65px
        height 65px
        border 0
        background-color transparent
        border-top-right-radius 6px
        border-bottom-right-radius 6px
        outline none
        cursor pointer
        transition background-color .2s ease-out

        &:hover,
        &:focus
            background-color var(--active)

        & > .icon
            display block
            width 24px
            height 24px

    @media screen and (max-width 568px)
        &
            width 90%
            padding 0

    @media screen and (prefers-color-scheme dark)
        box-shadow 0 4px 16px rgba(0,0,0,.5)