#menu-list
    display flex
    flex-direction column
    width 440px + 64px
    margin 0 auto
    padding 0

    @media screen and (max-width 568px)
        &
            width 100%
            padding 0

#menu-fetch
    display block
    width 100%

    & > .illust
        display block
        width 80%
        height 251px
        margin 20px auto 40px auto

        @media screen and (max-width 568px)
            width 280px
            height 200px

    & > .title
        width 100%
        font-size 36px
        color var(--title)
        text-align center
        margin 16px 0

    & > .detail
        display block
        font-size 16px
        color var(--detail)
        text-align center
        font-weight 300
        margin 0